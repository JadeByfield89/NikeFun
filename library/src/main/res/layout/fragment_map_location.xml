<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_map_image"
        android:layout_width="match_parent"
        android:layout_height="150dp" />


    <TextView
        android:id="@+id/tv_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_map_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#ed215e"
        android:text="Latitude, Longitude"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_location_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_coordinates"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:text="This is your current location, press the button below to see the location of your nearest Nike retail stores."
        android:textColor="@android:color/black"
        android:textSize="18sp" />


    <Button
        android:id="@+id/b_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_location_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Exit"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/b_show_nike_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b_ok"
        android:layout_centerHorizontal="true"
        android:text="Show me my nearest Nike location"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>